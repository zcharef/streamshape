html
	head
		title="Like Widget"
		style(type='text/css').
			.alert_img {
				opacity: 80%;
				z-index: -1;
				border-radius: 100%;
				position: absolute;
				top: 50%;
				left: 50%;
				transform: translate(-50%, -50%);
				content: url(#{alert_img_src});
				height: #{alert_img_height};
			}
			.author {
				color: #{author_color};
			}
	style
		include ./includes/css/main.css
	style(src="https://fonts.googleapis.com/css?family=Source%20Sans%20Pro")
	script(type="module") let e = new LikeHandler('#{tiktok_username}', #{alert_duration});
		include ./includes/js/likeHandler.js

	body(class="widget")
		div(id="alertbox" class="alertbox")
			div
				img(class="alert_img")
				br
				div(id="author" class="author heartbeat")